{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "es2019"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitReturns": false,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": false,
    "baseUrl": "./src",
    "paths": {
      "$core": [
        "core"
      ],
      "$core/*": [
        "core/*"
      ],
      "$processes": [
        "processes"
      ],
      "$configs": [
        "configs"
      ],
      "$pages": [
        "pages"
      ],
      "$widgets": [
        "widgets"
      ],
      "$features": [
        "features"
      ],
      "$entities": [
        "entities"
      ],
      "$screens": [
        "screens"
      ],
      "$modules": [
        "modules"
      ],
      "$modules/*": [
        "modules/*"
      ],
    }
  },
  "extends": "expo/tsconfig.base",
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
