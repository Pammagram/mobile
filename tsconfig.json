{
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "es2019"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitReturns": false,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": false,
    "baseUrl": "./src",
    "paths": {
      "$app": ["app/*"],
      "$processes": ["processes"],
      "$configs": ["configs"],
      "$pages": ["pages"],
      "$widgets": ["widgets"],
      "$features": ["features"],
      "$entities": ["entities"],
      "$shared": ["shared"]
    }
  },
  "extends": "expo/tsconfig.base",
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts", "**/*.tsx"]
}
